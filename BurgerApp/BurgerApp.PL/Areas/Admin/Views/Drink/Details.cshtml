@model DrinkDTO

<h2>@Model.Name</h2>

<div>
    <h4>İçecek Detayları</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Adı
        </dt>
        <dd class="col-sm-10">
            @Model.Name
        </dd>
        <dt class="col-sm-2">
            Fiyatı
        </dt>
        <dd class="col-sm-10">
            @Model.Price
        </dd>
        <dt class="col-sm-2">
            Boyutu
        </dt>
        <dd class="col-sm-10">
            @Model.Size.ToString()
        </dd>
    </dl>
</div>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id">Düzenle</a> |
    <a asp-action="Index">Geri Dön</a>
</p>