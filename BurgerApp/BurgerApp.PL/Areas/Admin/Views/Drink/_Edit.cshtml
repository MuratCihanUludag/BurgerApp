@model BurgerApp.PL.Areas.Admin.Models.MenuViewModel.DrinkViewModel

<form id="editForm" asp-action="Edit" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">İçecek Adı</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price">Fiyat</label>
        <input asp-for="Price" class="form-control" type="number" step="0.01" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Size">Boyut</label>
        <select asp-for="Size" class="form-control" asp-items="Html.GetEnumSelectList<BurgerApp.DAL.Comman.ProductSize>()"></select>
    </div>
    <div class="form-group">
        <label asp-for="Image">Resim (Yeni resim yüklemek isterseniz seçin)</label>
        <input asp-for="Image" type="file" class="form-control-file" />
        <span asp-validation-for="Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Güncelle</button>
</form>