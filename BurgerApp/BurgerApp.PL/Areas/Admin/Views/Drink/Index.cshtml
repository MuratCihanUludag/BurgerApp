@model IEnumerable<DrinkDTO>

@{
    ViewData["Title"] = "Drinks List";
}

<h2>@ViewData["Title"]</h2>

<h2>İçecekler</h2>

<p>
    <a asp-action="Create">Yeni İçecek Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Adı</th>
            <th>Fiyatı</th>
            <th>Boyutu</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var drink in Model)
        {
            <tr>
                <td>@drink.Name</td>
                <td>@drink.Price</td>
                <td>@drink.Size.ToString()</td>
                <td>
                    <img src="data:image/jpeg;base64,@Convert.ToBase64String(drink.Image)" alt="İçecek Resmi" style="width:100px; height:auto;"/>
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@drink.Id">Düzenle</a> |
                    <a asp-action="Details" asp-route-id="@drink.Id">Detaylar</a> |
                    <a asp-action="Delete" asp-route-id="@drink.Id">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>