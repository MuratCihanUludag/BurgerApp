@model IEnumerable<BurgerApp.PL.Areas.Admin.Models.MenuViewModel.DrinkViewModel>

@{
    ViewData["Title"] = "İçecek Yönetimi";
}
<div class="container mt-4">
    <h2>@ViewData["Title"]</h2>
    <button id="createButton" class="btn btn-success">Yeni İçecek Ekle</button>
    <div id="drinksListContainer"></div>
</div>
<div class="modal fade" id="modal" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">İçecek Ekle</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="modalBody">
            </div>
        </div>
    </div>
</div>
@section Scripts {
    <script src="~/js/site.js" asp-append-version="true"></script>
}