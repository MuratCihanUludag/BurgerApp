@using BurgerApp.PL.Areas.Admin.Models.MenuViewModel
@using BurgerApp.PL.CommonFunctions
@model SauceViewModel

@{
    int index = 1;
}

<table class="table table-hover">
    <thead>
        <tr class="align-items-center">
            <th>#</th>
            <th>Ad</th>
            <th>Resim</th>
            <th>Fiyat</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody id="table-list">
        @foreach (SauceViewModel burger in ViewBag.sauceViewList)
        {
            <tr>
                <td>@(index++)</td>
                <td>@burger.Name</td>
                <td>
                    @{
                        var image2 = CommonFunc.ImageToArray(burger.Image);
                    }
                    <img class="img-fluid" style="width:150px;height:100px;object-fit:contain" src="@($"data:image/jpeg;base64,{Convert.ToBase64String(image2)}")" alt="Burger Image" />
                </td>
                <td>@burger.Price</td>
                <td>
                    <button data-bs-target="#btn-edit-sauce" data-bs-toggle="modal" id="@burger.Id" class="btn  btn-edit-sauces btn-outline-warning me-2">Düzenle</button>
                    <button data-bs-target="#btn-delete-sauce" data-bs-toggle="modal" id="@burger.Id" class="btn btn-delete-sauces btn-outline-danger">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>

<form id="form-add" asp-action="Add" method="POST" enctype="multipart/form-data">
    <table class="table table-hover">
        <tbody>
            <tr>
                <td>@(index + 1)</td>
                <td>
                    <input name="Name" class="form-control" placeholder="Ad" />
                    <span id="Name-error" class="text-danger"></span>
                </td>
                <td>
                    <input name="Image" type="file" class="form-control" placeholder="Resim" />
                    <span id="Image-error" class="text-danger"></span>
                </td>
                <td>
                    <input name="Price" type="number" value="0" class="form-control" placeholder="Fiyat" />
                    <span id="Price-error" class="text-danger"></span>
                </td>
                <td><button type="button" id="add-button" class="btn btn-primary w-100">Ekle</button></td>
            </tr>
        </tbody>
    </table>
</form>

<script>

    $("#add-button").click(() => {
        var formData = new FormData($("#form-add")[0]);
        $.ajax({
            url: `/admin/sauces/add`,
            method: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: (data) => {
                console.log("İstek başarıyla tamamlandı:");
                ReInitTable()
            },
            error: (xhr) => {
                if (xhr.status === 400) {
                    var errors = xhr.responseJSON;
                    $.each(errors, function (key, value) {
                        $("#" + key + "-error").text(value.join(", "));
                    });
                } else {
                    console.log("İstek başarısız oldu. Hata kodu:", xhr.status);
                }
            }
        })
    })
    function ReInitTable() {
        $.ajax({
            url: `/admin/sauces/getTableList`,
            method: 'GET',
            beforeSend: () => {
                console.log("bekleyin")
            },
            success: (data) => {
                $(".table-responsive").html(data);
                BindButton()
            }
        })
    }

</script>

