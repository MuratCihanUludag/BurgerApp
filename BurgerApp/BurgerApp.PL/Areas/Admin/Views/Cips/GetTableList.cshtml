@using BurgerApp.PL.Areas.Admin.Models.MenuViewModel
@using BurgerApp.PL.CommonFunctions
@model List<CipsViewModel>
@{
    int index = 0;
}
<table class="table table-hover">
    <thead>
        <tr>
            <th>#</th>
            <th>Ad</th>
            <th>Resim</th>
            <th>Fiyat</th>
            <th>Aksiyonlar</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cips in Model)
        {
            <tr>
                <td>
                    @(index++)
                </td>
                <td>
                    @cips.Name
                </td>
                <td>
                    @{
                        var image2 = CommonFunc.ImageToArray(cips.Image);
                    }
                    <img class="img-fluid" style="width:150px;height:100px;object-fit:contain" src="@($"data:image/jpeg;base64,{Convert.ToBase64String(image2)}")" alt="Burger Image" />
                </td>
                <td>
                    @cips.Size
                </td>
                <td>
                    @cips.Price
                </td>
                <td class="d-flex">
                    <button data-bs-target="#btn-edit-cips" data-bs-toggle="modal" id="@cips.Id" class="btn btn-outline-warning me-2">Duzenle</button>
                    <button class="btn btn-outline-danger">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>
<form id="form-add" asp-action="Add" method="POST" enctype="multipart/form-data">
    <table class="table table-hover">
        <tbody>
            <tr>
                <td>@(index + 1)</td>
                <td><input name="Name" class="form-control" placeholder="Ad" /></td>
                <td><input name="Image" type="file" class="form-control" placeholder="Resim" /></td>
                <td><input name="Description" class="form-control" placeholder="Açıklama" /></td>
                <td><input name="Price" class="form-control" placeholder="Fiyat" /></td>
                <td><button type="button" class="btn btn-primary w-100">Ekle</button></td>
            </tr>
        </tbody>
    </table>
</form>

<script>
    $(".btn-primary").click(() => {
        var formData = new FormData($("#form-add")[0]);
        $.ajax({
            url: `Add`,
            method: "POST",
            data: formData,
            processData: false,
            contentType: false,
            success: (data) => {
                console.log("İstek başarıyla tamamlandı:");
                ReInitTable()
            },
            error: (xhr) => {
                console.log("İstek başarısız oldu. Hata kodu:", xhr.status);

            }
        })
    })
    function ReInitTable() {
        $.ajax({
            url: `GetTableList`,
            method: 'GET',
            beforeSend: () => {
                console.log("bekleyin")
            },
            success: (data) => {
                $(".table-responsive").html(data);
                BindButton()
            }
        })
    }

</script>