@using BurgerApp.PL.Areas.Admin.Models.MenuViewModel
@using BurgerApp.PL.CommonFunctions
@model List<CipsViewModel>
@{
    int index = 1;

}
<div class="table-responsive">
</div>

<!-- Edit-Modal -->
<div class="modal fade" id="btn-edit-cips" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Burger Duzenle</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="cips-edit">
            </div>
        </div>
    </div>
</div>

<!-- Delete-Modal -->
<div class="modal fade" id="btn-delete-cips" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Burger Sil</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div id="burger-delete">
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(() => {
            $.ajax({
                url: `GetTableList`,
                method: 'GET',
                beforeSend: () => {
                    console.log("bekleyin")
                },
                success: (data) => {
                    $(".table-responsive").html(data);
                    BindButton()
                }
            })
        })
        function BindButton() {
            $(".btn-outline-warning").click((e) => {
                var id = e.target.id;
                console.log(id)
                $.ajax({
                    url: `Edit/${id}`,
                    method: "GET",
                    success: (data) => {
                        $("#cips-edit").html(data);
                    },
                    error: (xhr) => {
                        console.log(xhr.status)
                    }
                })
            })

            $(".btn-outline-danger").click((e) => {
                var id = e.target.id;
                console.log(id)
                $.ajax({
                    url: `Delete/${id}`,
                    method: "GET",
                    success: (data) => {
                        $("#burger-delete").html(data);
                    },
                    error: (xhr) => {
                        console.log(xhr.status)
                    }
                })
            })
        }



    </script>
}