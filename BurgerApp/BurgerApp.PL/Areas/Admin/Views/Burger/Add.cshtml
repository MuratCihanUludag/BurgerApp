@using BurgerApp.PL.Areas.Admin.Models.MenuViewModel
@model BurgerViewModel

<form asp-action="Add" enctype="multipart/form-data">
    <div class="form-group">
        <label class="form-label" asp-for="Name">Name</label>
        <input class="form-control" asp-for="Name" />
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Description">Description</label>
        <input class="form-control" asp-for="Description" />
    </div>
    <div class="form-group">
        <label class="form-label" asp-for="Price">Price</label>
        <input class="form-control" asp-for="Price" />
    </div>
    <div class="form-group">
        <label class="form-label">Image</label>
        <input class="form-control" asp-for="Image" type="file"  />
    </div>
    <button type="submit" class="btn btn-primary mt-2">Kaydet</button>
</form>