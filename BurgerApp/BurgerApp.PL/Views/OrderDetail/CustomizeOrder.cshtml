@* @using BurgerApp.DAL.Comman
@using BurgerApp.PL.Areas.Admin.Models.MenuViewModel
@using BurgerApp.PL.ViewModels
@model CustomizeOrderViewModel


<!-- Özelleştirme seçeneklerini sunan form -->
<form id="customizeOrderForm">
    <div>
        <label for="SelectedBurgersIds">Burger:</label>
        <select id="SelectedBurgersIds" name="SelectedBurgersIds">
            @foreach (var burger in Model.AvailableBurgers)
            {
                <option value="@burger.Id">@burger.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="SelectedDrinksIds">Drink:</label>
        <select id="SelectedDrinksIds" name="SelectedDrinksIds">
            @foreach (var drink in Model.AvailableDrinks)
            {
                <option value="@drink.Id">@drink.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="SelectedCipsIds">Cips:</label>
        <select id="SelectedCipsIds" name="SelectedCipsIds">
            @foreach (var cips in Model.AvailableCips)
            {
                <option value="@cips.Id">@cips.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="SelectedSaucesIds">Sauces:</label>
        <select id="SelectedSaucesIds" name="SelectedSaucesIds" multiple>
            @foreach (var sauce in Model.AvailableSauces)
            {
                <option value="@sauce.Id">@sauce.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="SelectedExtrasIds">Extra Materials:</label>
        <select id="SelectedExtrasIds" name="SelectedExtrasIds" multiple>
            @foreach (var extra in Model.AvailableExtras)
            {
                <option value="@extra.Id">@extra.Name</option>
            }
        </select>
    </div>
    <div>
        <label for="SpecialRequests">Special Requests:</label>
        <textarea id="SpecialRequests" name="SpecialRequests"></textarea>
    </div>
    <button type="submit">Siparişi Özelleştir ve Sepete Ekle</button>
</form>

<script>
    $(document).ready(function () {
        $('#customizeOrderForm').on('submit', function (e) {
            e.preventDefault(); // Form gönderimini engelle.

            var formData = $(this).serialize(); // Form verilerini topla.

            // AJAX POST isteği ile verileri gönder.
            $.ajax({
                url: '@Url.Action("CustomizeOrder", "OrderDetail")', // Action ve Controller adını doğru şekilde girin.
                type: 'POST',
                data: formData,
                success: function (response) {
                    // İşlem başarılıysa kullanıcıya bilgi ver.
                    alert(response.message);
                    // Diğer işlemler, örneğin sepeti güncelleme vs.
                },
                error: function (error) {
                    // Hata durumunda kullanıcıya bilgi ver.
                    console.error(error);
                    alert("Bir hata oluştu, lütfen tekrar deneyiniz.");
                }
            });
        });
    });
</script> *@